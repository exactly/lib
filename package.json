{
  "name": "@exactly/lib",
  "version": "0.0.1",
  "homepage": "https://exact.ly",
  "repository": "github:exactly/lib",
  "scripts": {
    "prepare": "run-s build:*",
    "build:esm": "tsc && echo '{ \"type\": \"module\" }' > esm/package.json",
    "build:cjs": "tsc --module commonjs --outDir cjs && echo '{ \"type\": \"commonjs\" }' > cjs/package.json",
    "build:types": "tsc --declaration --declarationMap --emitDeclarationOnly --outDir types",
    "lint": "eslint --ext .ts,.js ."
  },
  "type": "module",
  "files": [
    "esm",
    "cjs",
    "types",
    "src"
  ],
  "exports": {
    "./*": {
      "types": "./types/*.d.ts",
      "require": "./cjs/*.js",
      "import": "./esm/*.js",
      "default": "./esm/*.js"
    }
  },
  "engines": {
    "node": ">=14"
  },
  "peerDependencies": {
    "graphql": ">=14",
    "graphql-request": ">=4"
  },
  "devDependencies": {
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "graphql": "^16.6.0",
    "graphql-request": "^6.1.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
