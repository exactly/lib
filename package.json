{
  "name": "@exactly/lib",
  "version": "0.0.1",
  "homepage": "https://exact.ly",
  "repository": "github:exactly/lib",
  "scripts": {
    "prepare": "concurrently 'npm:build:*' --group -c auto",
    "build:cjs": "tsc",
    "build:esm": "tsc --module ES2020 --outDir esm && echo '{ \"type\": \"module\" }' > esm/package.json",
    "test": "concurrently 'npm:test:*' --group -c auto",
    "test:bun": "bun test",
    "test:lint": "eslint ."
  },
  "files": [
    "esm",
    "cjs",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/bun": "^1.0.5",
    "@types/eslint": "^8.56.2",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-require-extensions": "^0.1.3",
    "eslint-plugin-unicorn": "^51.0.1",
    "fast-check": "^3.15.1",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "ml-matrix": "^6.11.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "viem": "^2.7.6"
  }
}
