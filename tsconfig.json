{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "strict": true,
    "noEmit": true,
  },
  "include": ["src"]
}
